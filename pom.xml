  <profiles>
    <profile>
      <id>development</id>
      <properties>
        <spring.profiles.active>development</spring.profiles.active>

        <weixin.id>0</weixin.id>

        <weixin.appid />
        <weixin.appsecret />
        <weixin.token />
      </properties>
    </profile>
    <profile>
      <id>production</id>
      <properties>
        <spring.profiles.active>production</spring.profiles.active>

        <weixin.id>0</weixin.id>

        <weixin.appid />
        <weixin.appsecret />
        <weixin.token />
      </properties>
    </profile>
  </profiles>

